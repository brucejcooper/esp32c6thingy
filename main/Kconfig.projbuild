        help
            GPIO pin number to use as button #3.  Set to -1 to disable.

            
    config CCPEED_PROVIDER_GPIO_BUTTON_4
        int "GPIO button #4"
        depends on CCPEED_PROVIDER_GPIO_BUTTON_ENABLE
        default -1
        help
            GPIO pin number to use as button #4.  Set to -1 to disable.
        
    config CCPEED_PROVIDER_GPIO_BUTTON_5
        int "GPIO button #5"
        depends on CCPEED_PROVIDER_GPIO_BUTTON_ENABLE
        default -1
        help
            GPIO pin number to use as button #5.  Set to -1 to disable.
        

    config CCPEED_PROVIDER_GPIO_BUTTON_6
        int "GPIO button #6"
        depends on CCPEED_PROVIDER_GPIO_BUTTON_ENABLE
        default -1
        help
            GPIO pin number to use as button #6.  Set to -1 to disable.
        
